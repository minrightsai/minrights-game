{
  "name": "trivia-game-monorepo",
  "version": "1.0.0",
  "description": "A simple weekly trivia game",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && uvicorn main:app --reload --port 8000",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "install:all": "cd apps/frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "build:frontend": "cd apps/frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["trivia", "game", "fastapi", "react"],
  "author": "",
  "license": "ISC"
}